// 2. Tạo Model Notification
model Notification {
  id           String                   @id @default(auto()) @map("_id") @db.ObjectId
  recipientId  String                   @db.ObjectId
  senderId     String?                  @db.ObjectId // Null nếu là tin từ hệ thống
  type         NotificationType
  actionStatus NotificationActionStatus @default(NONE)
  content      String                   @default("") // Nội dung hiển thị ngắn gọn
  link         String? // Link điều hướng khi click (VD: /messages/123)
  isRead       Boolean                  @default(false)
  createdAt    DateTime                 @default(now())

  // Quan hệ
  recipient User  @relation("NotificationRecipient", fields: [recipientId], references: [id], onDelete: Cascade)
  sender    User? @relation("NotificationSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([recipientId]) // Index để query danh sách thông báo cực nhanh
}
